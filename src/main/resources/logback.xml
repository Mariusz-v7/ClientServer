<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>[%highlight(%5level)] [%25class{0}] %d{HH:mm:ss.SSS}: %boldBlue(%msg) [%thread] [%logger{36}] %n
            </pattern>
        </encoder>
    </appender>

    <logger level="INFO" name="pl.mrugames">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
